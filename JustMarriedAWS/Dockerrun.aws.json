{
  "AWSEBDockerrunVersion": "2",
  "volumes": [
    {
      "name": "db",
      "host": {
        "sourcePath": "/db"
      }
    }
  ],
  "containerDefinitions": [
    {
      "name": "db",
      "image": "mongo:3.4.3",
      "essential": true,
      "memory": 128,
      "portMappings": [
        {
          "hostPort": 27017,
          "containerPort": 27017
        }
      ],
      "mountPoints": [
        {
          "sourceVolume": "db",
          "containerPath": "/db"
        }
      ]
    },
    {
      "name": "jmserver",
      "image": "justmarried/just-married-server:latest",
      "essential": true,
      "memory": 128,
      "portMappings": [
        {
          "hostPort": 2701,
          "containerPort": 2701
        }
      ],
      "links": [
        "db"
      ]
    },
    {
      "name": "jmclient",
      "image": "justmarried/just-married-client:latest",
      "essential": true,
      "memory": 128,
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 3000
        }
      ],
      "links": [
        "db"
      ]
    }
  ]
}